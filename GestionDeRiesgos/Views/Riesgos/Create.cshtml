<h1 class="tituloPanel">Añadir Riesgo</h1>






       
     @*Mostrar un mensaje de error mediante el alert*@
        @if (TempData["MensajeCodigo"] != null)
        {
            //Si tiene datos mostramos el alert en caso de que falle la autenticacion
                <div class="alert alert-warning" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"> </button>
                    <stromg>
                    @TempData["MensajeCodigo"]
                    </stromg>
                </div>

        }


<div class="row">
    <div class="col-12">

   


        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
             <div class="row ">
                <div class="col-xl-4 col-md-6 col-sm-12">
                    <div class="row">

                    
                    <div class="form-group  col-8">

                                <input asp-for="codigoRiesgo" class="form-control inputs" placeholder="Código de riesgo" style="text-transform:uppercase" />
                    <span asp-validation-for="codigoRiesgo" class="text-danger"></span>
                     </div>

                     <div class="col-4 ">
                                   <div class=" justify-content-end d-flex  align-content-end">
                                        <div class="form-group">
                                    <button class="btnCodigoRiesgos" onclick="location.href='@Url.Action("Abreviaciones", "Riesgos")';return false;">Códigos Riesgos</button>

                                     </div>
                                 </div>
                     </div>


                     </div>
                     
                
            <div class="form-group">
               
                <input asp-for="nombre" class="form-control inputs"  placeholder="Nombre"  />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="descripcion" class="form-control inputs"  placeholder="Descripción" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
              
          

                     
                
          
                            <label>Probabilidad</label>
                            <select class="form-select inputs" name="probabilidad" id="probabilidad">
                                <option value="Alta">Alta</option>
                                <option value="Media">Media</option>
                                <option value="Baja">Baja</option>

                            </select>
           







            </div>
            </div>
             <div class="col-xl-4 col-md-6 col-sm-12">
                  <div class="form-group">
           

                
                            <label>Impacto</label>
                            <select class="form-select inputs" name="impacto" id="impacto">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>

                            </select>



                   </div>
            
            <div class="form-group">
               
                <input asp-for="fecha" class="form-control inputs"  placeholder="Fecha" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                
          
                            <label>Estado</label>
                            <select class="form-select inputs" name="estado" id="estado">
                                <option value="A">Activo</option>
                                <option value="I">Inactivo</option>
                            </select>
            </div>
            </div>
             <div class="col-xl-4 col-md-6 col-sm-12">
                   <div class="form-group">
               
                <textarea asp-for="observaciones" rows="6" cols="50"  class="form-control inputs" placeholder="Observaciones"></textarea> 
                <span asp-validation-for="observaciones" class="text-danger"></span>
            </div>
            </div>

        </div>
        <div class="row">
            <div class=" justify-content-end d-flex  align-content-end">
                 <div class="form-group">
                <button type="submit" value="Create" class="btnGuardar">Agregar</button> 
                </div>
            </div>
              
        </div>
       
         
        </form>
    </div>
</div>
</body>
</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
