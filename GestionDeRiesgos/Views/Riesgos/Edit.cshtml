@model GestionDeRiesgos.Models.Riesgos

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="tituloPanel">Editar Riesgo</h1>
 
  <style>
     body {
            position: relative;
             min-height: 10vh;
            margin: 0;
            padding: 0;
        }
        
        .background-svg {
            position: absolute;
            bottom: -140px;
            left: 0;
            width: 100%;
            height: auto;
            z-index: -2;
        }
    </style>
    <body>
     <svg class="background-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
        <path fill="#41ADE7" fill-opacity="0.9" d="M0,32L60,80C120,128,240,224,360,240C480,256,600,192,720,138.7C840,85,960,43,1080,42.7C1200,43,1320,85,1380,106.7L1440,128L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"></path>
    </svg>


<div class="row">

    <div class="col-12">

   


        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
             <div class="row ">
                <div class="col-xl-4 col-md-6 col-sm-12">
                    <div class="form-group" hidden>
                   
                    <input asp-for="codigoRiesgo" class="form-control inputs" placeholder="Código de riesgo" />
                    <span asp-validation-for="codigoRiesgo" class="text-danger"></span>
                </div>
            <div class="form-group">
                            <label>Nombre</label>

                <input asp-for="nombre" class="form-control inputs"  placeholder="Nombre"  />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                            <label>Descripcion</label>

                <input asp-for="descripcion" class="form-control inputs"  placeholder="Descripción" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
              
         

                    <label>Probabilidad</label>
                            <select asp-for="probabilidad" class="form-select inputs" name="probabilidad" id="probabilidad">
                                <option value="Alta">Alta</option>
                                <option value="Media">Media</option>
                                <option value="Baja">Baja</option>

                            </select>


            </div>
            </div>
             <div class="col-xl-4 col-md-6 col-sm-12">
                  <div class="form-group">
               
          

                      <label>Impacto</label>
                            <select asp-for="impacto" class="form-select inputs" name="impacto" id="impacto">
                                 <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>





            </div>
              <div class="form-group">
                            <label>Categoría</label>

                <input asp-for="categoria" class="form-control inputs"  placeholder="Categoria" />
           
                <span asp-validation-for="categoria" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                            <label>Fecha</label>

                <input asp-for="fecha" class="form-control inputs"  placeholder="Fecha" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
           
                     <label>Estado</label>
                            <select asp-for="estado" class="form-select inputs" name="estado" id="estado">
                                <option value="A">Activo</option>
                                <option value="I">Inactivo</option>
                            </select>
            </div>
            </div>
             <div class="col-xl-4 col-md-6 col-sm-12">
                   <div class="form-group">
                            <label>Observaciones</label>

                <textarea asp-for="observaciones" rows="6" cols="50"  class="form-control inputs" placeholder="Observaciones"></textarea> 
                <span asp-validation-for="observaciones" class="text-danger"></span>
            </div>
            </div>

        </div>
        <div class="row">
            <div class=" justify-content-end d-flex  align-content-end">
                 <div class="form-group">
                <button type="submit" value="Save" class="btnGuardar">Editar</button> 
                </div>
            </div>
              
        </div>
       
         
        </form>
    </div>
</div>
@*////////////////////////////////////////////////////////////////////////////*@
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
