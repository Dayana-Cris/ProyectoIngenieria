@model IEnumerable<GestionDeRiesgos.Models.Riesgos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Consultar Riesgo</h1>
<form asp-controller="Planes" asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <input asp-controller="Riesgos" asp-action="Index" asp-route-idBusqueda="1" type="submit" value="Código" class="btn btn-sm btn-dark" />
        <input asp-controller="Riesgos" asp-action="Index" asp-route-nombreBusqueda="2" type="submit" value="Nombre" class="btn btn-sm btn-dark" />
        <input asp-controller="Riesgos" asp-action="Index" asp-route-probabilidad="3" type="submit" value="Probabilidad" class="btn btn-sm btn-dark" />


        <input asp-controller="Riesgos" asp-action="Index" asp-route-restaurar="restaurar" type="submit" value="Restaurar" class="btn btn-sm btn-dark" />

    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.codigoRiesgo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.probabilidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.impacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.observaciones)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.codigoRiesgo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.probabilidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.impacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.observaciones)
            </td>
            <td>
                    @if (TempData["Mensaje"] == "opcion1")
                    {
                        @Html.ActionLink("Edit", "Edit", new { id=item.codigoRiesgo });
                    }
                    @if (TempData["Mensaje"] == "opcion2")
                    {
                        @Html.ActionLink("Delete", "Delete", new { id=item.codigoRiesgo});

                    }
                    @if (TempData["Mensaje"] == "opcion3" || TempData["Mensaje"] == null)
                    {
                        @Html.ActionLink("Details", "Details", new { id=item.codigoRiesgo });
                    }
                    
            </td>
        </tr>
}
    </tbody>
</table>
