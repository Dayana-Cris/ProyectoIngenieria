<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestionDeRiesgos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestionDeRiesgos.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GestionDeRiesgos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="nav nav-tabs" id="navId" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link text-dark" >Inicio</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Riesgos</a>
                            <div class="dropdown-menu">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Riesgos" asp-action="Create">Agregar</a>
                                    <div class="dropdown-divider"></div>

                                    <a class="nav-link text-dark" asp-area="" asp-controller="Riesgos" asp-action="Index" asp-route-id="1">Editar</a>
                                    <div class="dropdown-divider"></div>

                                   

                                }
                                <a class="nav-link text-dark" asp-area="" asp-controller="Riesgos" asp-action="Index" asp-route-id="3">Consultar</a>
                                <div class="dropdown-divider"></div>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    

                                    <a class="nav-link text-dark" asp-area="" asp-controller="Riesgos" asp-action="Index" asp-route-id="2">Eliminar</a>
                                    <div class="dropdown-divider"></div>

                                }


                                <div class="dropdown-divider"></div>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Planes</a>
                            <div class="dropdown-menu">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Planes" asp-action="Create">Agregar</a>
                                    <div class="dropdown-divider"></div>

                                    <a class="nav-link text-dark" asp-area="" asp-controller="Planes" asp-action="Index" asp-route-id="1">Editar</a>
                                    <div class="dropdown-divider"></div>



                                }
                                <a class="nav-link text-dark" asp-area="" asp-controller="Planes" asp-action="Index" asp-route-id="3">Consultar</a>
                                <div class="dropdown-divider"></div>

                                @if (User.Identity.IsAuthenticated)
                                {


                                    <a class="nav-link text-dark" asp-area="" asp-controller="Planes" asp-action="Index" asp-route-id="2">Eliminar</a>
                                    <div class="dropdown-divider"></div>

                                }


                                <div class="dropdown-divider"></div>
                            </div>
                        </li>
                        @*Solo si esta autenticado puede realiazar el cambio de contrasena*@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Seguridad</a>
                                <div class="dropdown-menu">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Create">Agregar</a>
                                        <div class="dropdown-divider"></div>

                                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index" asp-route-id="1">Editar</a>
                                        <div class="dropdown-divider"></div>



                                    }
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index" asp-route-id="3">Consultar</a>
                                    <div class="dropdown-divider"></div>

                                    @if (User.Identity.IsAuthenticated)
                                    {


                                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index" asp-route-id="2">Eliminar</a>
                                        <div class="dropdown-divider"></div>

                                    }


                                    <div class="dropdown-divider"></div>
                                </div>
                            </li>
                        }

                        

                    </ul>
                    <ul>
                        @*Solo si no esta autenticado debe aparecer la opcion de loguearse*@
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Login">Login</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Logout">Cerrar sesion</a>
                            </li>
                        }

                    </ul>
                   
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - GestionDeRiesgos - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
