<h1 class="tituloPanel">Añadir Usuario</h1>


<div class="row">
    <div class="col-12">

        @*Se revisa si existe un mensaje de error*@
        @if (TempData["MensajeError"] != null)
        {
            //se muestra el mensaje de error
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                <strong>@TempData["MensajeError"]</strong>
            </div>

        }


        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
             <div class="row ">
                <div class="col-xl-4 col-md-6 col-sm-12">
                    <div class="form-group">


                            <label>Nombre</label>

                    <input asp-for="nombre" class="form-control inputs" placeholder="Nombre" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>
            <div class="form-group">

                            <label>Correo</label>

                <input asp-for="correo" class="form-control inputs"  placeholder="Correo Electrónico"  />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <div class="form-group">

                            <label>Contraseña</label>

               
                <input type="password" asp-for="password" class="form-control inputs"  placeholder="Contraseña" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

                        <div class="form-group">

                            <label>Rol</label>
                            <select class="form-select inputs" name="rol" id="rol">
                                <option value="Administrador">Administrador</option>
                                <option value="Gerente">Gerente</option>

                            </select>


                        </div>
            </div>
        
       
        </div>


        <div class="row">
            <div class=" justify-content-end d-flex  align-content-end">

          

              <div class="form-group">
                <button type="submit" value="Guardar" class="btnGuardar">Agregar</button> 
                </div>
              
            </div>
      
        </div>

                
         
        </form>
    </div>
</div>



