@model GestionDeRiesgos.Models.Usuarios

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <style>
     body {
            position: relative;
             min-height: 10vh;
            margin: 0;
            padding: 0;
        }
        
        .background-svg {
            position: absolute;
            bottom: -140px;
            left: 0;
            width: 100%;
            height: auto;
            z-index: -2;
        }
    </style>

<h1 class="tituloPanel">Editar Usuario</h1>

<body>
       <svg class="background-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
        <path fill="#41ADE7" fill-opacity="0.9" d="M0,32L60,80C120,128,240,224,360,240C480,256,600,192,720,138.7C840,85,960,43,1080,42.7C1200,43,1320,85,1380,106.7L1440,128L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"></path>
    </svg>

<div class="row">

    <div class="col-12">

   


        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
             <div class="row ">
                <div class="col-xl-4 col-md-6 col-sm-12">
                    <div class="form-group" >
                      <label asp-for="idUsuario" class="control-label"></label>
                    <input readonly asp-for="idUsuario" class="form-control inputs" placeholder="Id Usuario" />
                    <span asp-validation-for="idUsuario" class="text-danger"></span>
                </div>
            <div class="form-group">
               
                 <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control inputs"  placeholder="Nombre"  />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="correo" class="control-label"></label>
                <input readonly asp-for="correo" class="form-control inputs"  placeholder="Correo" />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
                
               <div hidden class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input readonly asp-for="password" class="form-control inputs"  placeholder="Contrasenia" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label>Rol</label>
                            <select class="form-select inputs" name="rol" id="rol">
                                <option value="Administrador">Administrador</option>
                                <option value="Gerente">Gerente</option>

                            </select>


            </div>
            <p>
                @Html.ActionLink("Cambiar contraseña", "Restablecer", new { @class = "btn btn-primary glyphicon glyphicon-edit" })
            </p>
        
            </div>
          

        </div>
        <div class="row">
            <div class=" justify-content-end d-flex  align-content-end">
                 <div class="form-group">
                <button type="submit" value="Save" class="btnGuardar">Editar</button> 
               
              
           
                </div>
            </div>
              
        </div>
       
         
        </form>
    </div>
</div>
</body>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
